{
	"name": "wptelegram/core",
	"version": "4.0.13",
	"description": "Integrate your WordPress site perfectly with Telegram with full control.",
	"require-dev": {
		"wp-coding-standards/wpcs": "^3.0"
	},
	"scripts": {
		"lint": "\"vendor/bin/phpcs\" --standard=phpcs.xml --extensions=php src/",
		"lint:skip-warnings": "\"vendor/bin/phpcs\" --standard=phpcs.xml --extensions=php -n src/",
		"lint:fix": "\"vendor/bin/phpcbf\" --standard=phpcs.xml --extensions=php src/"
	},
	"repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org",
			"only": [
				"wpackagist-plugin/*"
			]
		}
	],
	"require": {
		"wpackagist-plugin/cmb2": ">=2.9.0"
	},
	"extra": {
		"installer-paths": {
			"temp/{$name}/": [
				"wpackagist-plugin/cmb2"
			]
		}
	},
	"config": {
		"allow-plugins": {
			"composer/installers": false,
			"dealerdirect/phpcodesniffer-composer-installer": false
		}
	}
}
